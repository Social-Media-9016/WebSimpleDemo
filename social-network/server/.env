# 服务器配置
NODE_ENV=development
PORT=5000
HOST=localhost
LOG_LEVEL=debug

# PostgreSQL配置
PG_ENABLED=true
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=social_network
PG_USER=postgres
PG_PASSWORD=password
PG_POOL_SIZE=20
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=2000

# Firebase Admin配置
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID=ece9016-social-network
FIREBASE_PRIVATE_KEY_ID=your-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@ece9016-social-network.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxx%40ece9016-social-network.iam.gserviceaccount.com

# CORS配置
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# 安全配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=86400

# 性能配置
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100 